<!--Content-->
<div class="k-body" style="min-height:100%">
    <form action="~/CenterControl/CenterSettingTimeUpdate" method="post" autocomplete="off">
        <table style="width: 100%;">
            <tbody>
                <tr>
                    <td style="vertical-align: top" id="ctrlTdB">
                        <div style=" background-color: #c0c0c0">
                            <!--协议分组-->
                            <div class="k-tabs">
                                <ul>
                                    <li class="k-tab "><a href="">时钟设置</a></li>
                                </ul>
                            </div>
                            <div id="setarea" style="padding: 10px">
                                <!--协议本体-->
                                <table style="width: 100%">
                                    <tbody>
                                        <tr>
                                            <td class="kctrl-label">时间：</td>
                                            @{ 
                                                DateTime dt = DateTime.Now;
                                            }
                                            <td>
                                                <input type="text" class="k-hour" style="width:50px" name="year" value=@dt.Year>年<input type="text" class="k-min" name="month" value=@dt.Month>月<input type="text" class="k-sec" name="day" value=@dt.Day>日
                                            </td>
                                            <td>
                                                <input type="text" class="k-hour" name="hour" value=@dt.Hour>:<input type="text" class="k-min" name="minute" value=@dt.Minute>:<input type="text" class="k-sec" name="second" value=@dt.Second> H/M/S
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="kctrl-label">星期：</td>
                                            <td>
                                                <select name="week">
                                                    @if(dt.DayOfWeek.ToString() == "Monday")
                                                    {
                                                        <option value="1" selected="selected">星期一</option>
                                                        <option value="2">星期二</option>
                                                        <option value="3">星期三</option>
                                                        <option value="4">星期四</option>
                                                        <option value="5">星期五</option>
                                                        <option value="6">星期六</option>
                                                        <option value="7">星期日</option>
                                                    }
                                                    @if(dt.DayOfWeek.ToString() == "Tuesday")
                                                    {
                                                        <option value="1">星期一</option>
                                                        <option value="2" selected="selected">星期二</option>
                                                        <option value="3">星期三</option>
                                                        <option value="4">星期四</option>
                                                        <option value="5">星期五</option>
                                                        <option value="6">星期六</option>
                                                        <option value="7">星期日</option>
                                                    }
                                                    @if(dt.DayOfWeek.ToString() == "Wednesday")
                                                    {
                                                        <option value="1">星期一</option>
                                                        <option value="2">星期二</option>
                                                        <option value="3" selected="selected">星期三</option>
                                                        <option value="4">星期四</option>
                                                        <option value="5">星期五</option>
                                                        <option value="6">星期六</option>
                                                        <option value="7">星期日</option>
                                                    }
                                                    @if(dt.DayOfWeek.ToString() == "Thursday")
                                                    {
                                                        <option value="1">星期一</option>
                                                        <option value="2">星期二</option>
                                                        <option value="3">星期三</option>
                                                        <option value="4" selected="selected">星期四</option>
                                                        <option value="5">星期五</option>
                                                        <option value="6">星期六</option>
                                                        <option value="7">星期日</option>
                                                    }
                                                    @if(dt.DayOfWeek.ToString() == "Friday")
                                                    {
                                                        <option value="1">星期一</option>
                                                        <option value="2">星期二</option>
                                                        <option value="3">星期三</option>
                                                        <option value="4">星期四</option>
                                                        <option value="5" selected="selected">星期五</option>
                                                        <option value="6">星期六</option>
                                                        <option value="7">星期日</option>
                                                    }
                                                    @if(dt.DayOfWeek.ToString() == "Saturday")
                                                    {
                                                        <option value="1">星期一</option>
                                                        <option value="2">星期二</option>
                                                        <option value="3">星期三</option>
                                                        <option value="4">星期四</option>
                                                        <option value="5">星期五</option>
                                                        <option value="6" selected="selected">星期六</option>
                                                        <option value="7">星期日</option>
                                                    }
                                                    @if(dt.DayOfWeek.ToString() == "Sunday")
                                                    {
                                                        <option value="1">星期一</option>
                                                        <option value="2">星期二</option>
                                                        <option value="3">星期三</option>
                                                        <option value="4">星期四</option>
                                                        <option value="5">星期五</option>
                                                        <option value="6">星期六</option>
                                                        <option value="7" selected="selected">星期日</option>
                                                    }
                                                </select>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <div style="margin-top: 15px">
                                    <input type="submit" id="btnSendProto" name="oprType" class="k-btn" value="执行">
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </form>
</div>

